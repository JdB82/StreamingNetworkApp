generated_fastfile_id "0ad2a338-37e8-4ed3-acf7-77e555b08169"

default_platform :ios

# Fastfile actions accept additional configuration, but
# don't worry, fastlane will prompt you for required
# info which you can add here later
platform :ios do
  
  desc "Provision, take screenshots, build and upload to App Store"
  lane :do_everything do
    provision
    screenshot
    build
    upload
  end
  
  desc "Take screenshots"
  lane :screenshot do
    snapshot(scheme: "StreamingNetworkApp") 
  end
  
  desc "Deploy a new version to the App Store"
  lane :provision do
    produce(
      app_name: '247 Streaming Network',
      language: 'Dutch',
      app_version: '1.0',
      sku: '122255252525'
    )
    # cert to create a new private key and signing request, download and install the generated certificate and import all generated files in your keychain.
    cert
    # generate a provisioning profile. By specifying force: true, a new provisioning profile is created on each run; this ensures youâ€™re always using the correct code signing certificate.
    sigh(force: true)
  end
  
  desc "Upload to App Store"
  lane :upload do
    deliver(force: true)
  end
  
  desc "Create ipa"
  lane :build do
    increment_build_number
    gym(scheme: "StreamingNetworkApp") # Build your app - more options available

  end
  
  lane :beta do
  # build your iOS app
  gym(
    scheme: "StreamingNetworkApp",
    export_method: "app-store"
  )

  # upload to Testflight
  pilot(skip_waiting_for_build_processing: true)
 
  end

  error do |lane, exception|
  # This block is called if there was an error running a lane.
  end
  
end